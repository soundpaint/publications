  \tikz[] \node[coordinate] (n1) {};
  \begin{lilypond}[]
    \version "2.19.83" % preferably use exactly this version to ensure
                       % the resulting score matches the layout of our
                       % annotations
    \include "gregorian.ly"
    #(set-global-staff-size 14)
    \paper {
      indent = 0\mm
      line-width = 38\mm
    }
    \score {
      <<
        \new VaticanaVoice = "cantus" {
          \clef "vaticana-do3"
          % Sal-
          a\melisma \[ a \flexa g \pes a\melismaEnd \]
          % ve,
          % \augmentum
          d
          \divisioMinima
          % Re-
          \[ a\melisma \flexa g\melismaEnd \]
          % gí-
          \[ f\melisma \flexa e f \pes g \flexa f\melismaEnd \]
          % na,
          \[ \augmentum e\melisma \flexa \augmentum d\melismaEnd \]
          \divisioMaior
          % ma-
          c
          % ter
          d
          % mi-
          \[d\melisma \flexa c\melismaEnd \]
          % se-
          d
          % ri-
          \[ e\melisma \pes f\melismaEnd\]
          % cór-
          g
          % di-
          \[d\melisma \pes e \flexa c\melismaEnd \]
          % æ:
          \augmentum d
          \finalis
        }
        \new Lyrics \lyricsto "cantus" {
          Al- ve, Re- gí- na, ma- ter mi- se- ri- cór- di- æ:
        }
      >>
      \layout {
        ragged-last = ##t
      }
    }
  \end{lilypond}

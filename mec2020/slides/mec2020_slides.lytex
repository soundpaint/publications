\begin{frame}
  \frametitle{\gregorio}
  Vergleich \gregorio{} -- \lily
  \begin{itemize}
  \item<2-> {\color<2>{blue} kompaktere Eingabe in \gregorio{}
    \color{green}\cmark}
  \item<3-> {\color<3>{blue} aber kryptische Syntax
    \color{red}\xmark}
  \item<4-> {\color<4>{blue} Layout besser als in \lily{}
    \color{green}\cmark}
  \item<5-> {\color<5>{blue} Unterstützung für Initiale
    \color{green}\cmark}
  \item<6-> {\color<6>{blue} musikalische Logik im Präprozessor
    \color{yellow}\qmark}
  \item<7-> {\color<7>{blue} implizite Ligaturen
    \color{yellow}\qmark}
  \item<8-> {\color<8>{blue} keine Musik-Funktionen wie
    z.B. Transposition
    \color{red}\xmark}
  \item<9-> {\color<9>{blue} müssten im Präprozessor implementiert
    werden (vgl.\ \pmx)
    \color{red}\xmark}
  \item<10-> {\color<10>{blue} Beschränkungen ähnlich denen, die zu
    \lily{} führten \color{red}\xmark}
  \item<11->[]
    \color<11>{blue} $\Rightarrow$ Evtl.\ Scheme-Funktion
    für\\ Konvertierung \gregorio{} $\rightarrow$ \lily?
  \end{itemize}
\end{frame}

\section{Ausblick}

\begin{frame}
  \frametitle{Neographie}
  \begin{itemize}
  \item<2-> {\color<2>{blue} will rhythmische Nuancen besser
    ausdrücken}
  \item<3-> {\color<3>{blue} mit zusätzlichen Zeichen seit der
    Vaticana
    \begin{lilypond}[]
      \include "gregorian.ly"
      \score {
        \transpose c c' {
          \[ g \episemInitium \pes a \flexa g \episemFinis \]
          g-\ictus g4.
        }
        \layout { \neumeDemoLayoutNew }
      }
    \end{lilypond}
  }
  \item<4-> {\color<4>{blue} mit differenzierten Notenköpfen
    \begin{itemize}
    \item<5-> {\color<5>{blue} zusätzliche Notenköpfe in \lily{}:\\
      \texttt{\bs{}cavum}, \texttt{\bs{}linea}, analog zu \opustex{}
      \begin{lilypond}[]
        \include "gregorian.ly"
        \score {
          \transpose c c' {
            \[ \cavum a \]
            \[ \linea a \]
            \[ \cavum \linea a \] }
          \layout { \neumeDemoLayoutNew }
        }
      \end{lilypond}
    }
    \end{itemize}
    }
  \item<6-> {\color<6>{blue} mehrere konkurrierende
    Notationssysteme}
  \item<7-> {\color<7>{blue} weiteres Beispiel: Fluxus-Notation
    % vgl. [Goeschl18], pp. 81-82
    \begin{itemize}
    \item<8-> {\color<8>{blue} Basis: \emph{nicht} Quadratnotation,
      sondern St. Gallen}
    \item<9-> {\color<9>{blue} Ductus Laon nicht berücksichtigt}
    \end{itemize}
    }
  \item<10-> {\color<10>{blue} kaum umfassend
    möglich\footnote{J.~B.\ Göschl, \textit{Graduale Novum.
        Kommentar}, S. 78-80}}
  \end{itemize}
\end{frame}

\begin{frame}
  \frametitle{Graduale Novum (GrN)}
  Vergleich mit Graduale Trixplex (GT)
  \begin{itemize}
  \item<2-> \color<2>{blue} keine Neographie
  \item<3-> \color<3>{blue} $\Rightarrow$ Zeichen zur rhythmischen
    Interpretation des GT entfallen
    \begin{itemize}
    \item<4-> \color<4>{blue} Episem
      \begin{lilypond}[]
        \include "gregorian.ly"
        \score {
          \transpose c c' {
            \[ g \episemInitium \pes a \flexa g \episemFinis \]
          }
          \layout { \neumeDemoLayoutNew }
        }
      \end{lilypond}
      $\Rightarrow$
      \begin{lilypond}[]
        \include "gregorian.ly"
        \score {
          \transpose c c' {
            \[ g \pes a \flexa g \]
          }
          \layout { \neumeDemoLayoutNew }
        }
      \end{lilypond}
    \item<5-> \color<5>{blue} Ictus
      \begin{lilypond}[]
        \include "gregorian.ly"
        \score {
          \transpose c c' {
            g-\ictus
          }
          \layout { \neumeDemoLayoutNew }
        }
      \end{lilypond}
      $\Rightarrow$
      \begin{lilypond}[]
        \include "gregorian.ly"
        \score {
          \transpose c c' {
            \override Voice.Script.transparent = ##t
            g-\ictus
          }
          \layout { \neumeDemoLayoutNew }
        }
      \end{lilypond}
    \item<6-> \color<6>{blue} Moræ
      \begin{lilypond}[]
        \include "gregorian.ly"
        \score {
          \transpose c c' {
            g4.
          }
          \layout { \neumeDemoLayoutNew }
        }
      \end{lilypond}
      $\Rightarrow$
      \begin{lilypond}[]
        \include "gregorian.ly"
        \score {
          \transpose c c' {
            g
          }
          \layout { \neumeDemoLayoutNew }
        }
      \end{lilypond}
    \end{itemize}
  \item<7-> \color<7>{blue} stattdessen wie beim GT adiastematische
    Neumen
  \item<8-> \color<8>{blue} anders als GT durchgängig schwarz gedruckt
  \item<9-> \color<9>{blue} In Klammern gesetzte Vorzeichen
    \glqq[$\flat$]\grqq\footnote{GrN I, S. 11}
  \item<10-> \color<10>{blue} Neues Vorzeichen
    \glqq$\sharp$\grqq\footnote{GrN I, S. 309}
    % vgl. [Goeschl18], pp. 58-67
  \end{itemize}
\end{frame}

\begin{frame}
  \frametitle{Offene Punkte bei \lily}
  \begin{itemize}
  \item<2-> \color<2>{blue} Textausrichtung
    \begin{itemize}
    \item<3-> \color<3>{blue} Silbenvokal gebunden an führende Neume in Ligatur
    \item<4-> \color<4>{blue} horzontal zentriert
    \end{itemize}
  \item<5-> \color<5>{blue} Bessere Abstände zwischen Ligaturen
  \item<6-> \color<6>{blue} Unterstützung für Initiale
  \item<7-> \color<7>{blue} Besonderheiten des Graduale Novum
    \begin{itemize}
    \item<8-> \color<8>{blue} Adiastematische Neumen (wie auch schon bei GT)
    \item<9-> \color<9>{blue} In Klammern gesetzte Vorzeichen
      \glqq[$\flat$]\grqq
    \item<10-> \color<10>{blue} Neues Vorzeichen \glqq$\sharp$\grqq
    \end{itemize}
  \item<11-> \color<11>{blue} Eingabesprache ähnlich \gregorio?
  \end{itemize}
\end{frame}

